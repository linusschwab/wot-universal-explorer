{
  "name": "wot-universal-explorer",
  "description": "Universal Explorer for the Web of Things",
  "version": "0.5.0",
  "author": "Linus Schwab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/linusschwab/wot-universal-explorer.git"
  },
  "main": "run.js",
  "scripts": {
    "test": "jest"
  },
  "dependencies": {
    "@koa/cors": "2.2.1",
    "axios": "0.18.0",
    "koa": "2.5.0",
    "koa-bodyparser": "4.2.0",
    "koa-router": "7.4.0",
    "koa-send": "4.1.3",
    "speakingurl": "14.0.1",
    "ws": "5.1.1"
  },
  "devDependencies": {
    "@types/jest": "22.2.3",
    "@types/koa": "2.0.45",
    "@types/koa-bodyparser": "4.2.0",
    "@types/koa-router": "7.0.28",
    "@types/koa-send": "4.1.1",
    "@types/koa__cors": "2.2.2",
    "@types/speakingurl": "13.0.2",
    "@types/supertest": "2.0.4",
    "@types/ws": "4.0.2",
    "axios-mock-adapter": "1.15.0",
    "codecov": "3.0.0",
    "jest": "22.4.3",
    "supertest": "3.0.0",
    "ts-jest": "22.4.4",
    "typescript": "2.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text-summary",
      "json",
      "lcov"
    ]
  }
}
